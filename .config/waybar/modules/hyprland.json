{
	"hyprland/workspaces": {
		"on-scroll-up": "hyprctl dispatch workspace r-1",
		"on-scroll-down": "hyprctl dispatch workspace r+1",
		"on-click": "activate",
		"active-only": true,
		"all-outputs": false,
		"format": "{icon}",
		"format-icons": {
            "1": "",
            "2": "",
            "3": "󰙯",
            "4": "",
            "5": "",
            "6": "",
            "7": "󰮂",
			"default": ""
		}
	},
	"hyprland/window": {
		"format": "{}",
		"all-outputs": true,
		"rewrite": {
			"(.*) - qutebrowser": "🌎 $1",
			"(.*) - fish": "> [$1]"
		},
		"separate-outputs": true
	}
}
